<h1>Edit your profile</h1>

<%= form_tag path, method: method do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@user.name}" %>

  <%= label_tag :email %>
  <%= text_field_tag :email, "#{@user.email}" %>

  <%= label_tag :password %>
  <%= password_field_tag :password, "Your Password" %>

  <%= submit_tag button %>
<% end %>
