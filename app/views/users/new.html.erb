<h1>Register as a New User</h1>
<h2>Enter Address Fields to Create Home Address</h2>
<center>
  <%= form_tag '/users' do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @new_user.nil? ? '' : @new_user.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, @address.nil? ? '' : @address.address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @address.nil? ? '' : @address.city  %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @address.nil? ? '' : @address.state  %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip, @address.nil? ? '' : @address.zip  %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>

    <%= submit_tag 'Complete Registration' %>
  <% end %>
</center>
