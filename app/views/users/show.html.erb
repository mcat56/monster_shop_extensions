<h1>Hello, <%= @user.name %>!</h1>

<% if !@user.orders.empty? %>
  <%= link_to 'My Orders', "/profile/orders" %>
<% end %>

<%= link_to 'My Addresses', "/users/#{@user.id}/addresses" %>

<% @user.addresses.each do |address| %>
  <section id="address-<%= address.id %>">
    <h2><%= link_to address.nickname, "/users/#{@user.id}/addresses/#{address.id}" %></h2>
    <p>Address: <%= address.address %></p>
    <p>City: <%= address.city %></p>
    <p>State: <%= address.state %></p>
    <p>Zip Code: <%= address.zip %></p>
    <%= link_to 'Edit Address', "/users/#{@user.id}/addresses/#{address.id}/edit" %>
  </section>
<% end %>

<p>E-mail: <%= @user.email %></p>
<p>Role: <%= @user.role.gsub('_', ' ').capitalize %></p>

<%= link_to 'Add an Address', "/users/#{@user.id}/addresses/new" %>
<%= link_to "Edit Profile", "/profile/#{@user.id}/edit" %>
<%= link_to "Edit Password", "/profile/#{@user.id}/edit/password" %>
