<% if !@user.orders.empty? %>
  <%= link_to "#{@user.name}'s Orders'", "/profile/orders" %>
<% end %>


<% @user.addresses.each do |address| %>
  <section id="address-<%= address.id %>">
    <h2><%= address.nickname %></h2>
    <p>Address: <%= address.address %></p>
    <p>City: <%= address.city %></p>
    <p>State: <%= address.state %></p>
    <p>Zip Code: <%= address.zip %></p>
  </section>
<% end %>

<p>E-mail: <%= @user.email %></p>
<p>Role: <%= @user.role.gsub('_', ' ').capitalize %></p>
